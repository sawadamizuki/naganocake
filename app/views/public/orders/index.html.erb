<div class="container">
注文履歴一覧
<table class="table table-honer">
    <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>支払金額</th>
          <th>注文詳細</th>
        </tr>
    </thead>
    <tbody>

     <% @orders.each do |order| %>
        <tr>
            <td><%= order.created_at %></td>
            <td><%= order.address %></td>
            <td><%= order.total_payment %></td>
            <td><%= link_to "表示する", order_path(order), class: "btn btn-success" %></td>
        </tr>
     <% end %>

    </tbody>
  </table>
</div>