注文情報入力画面

<%= form_with model:@order, url:confirm_orders_path, local:true do |f| %>
 <h4>支払方法</h4>
   <p><%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
   <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %></p>

    <p><%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
   <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%></p>

 <h4>お届け先</h4>
   <p><%= f.radio_button :select_address, 0 %>
   <%= f.label :address, "ご自身の住所" %></br>
   〒<%= current_customer.postal_code %>  <%= current_customer.address %></p>

   <p><%= f.radio_button :select_address, 1 %>
   <%= f.label :address, "登録済み住所から選択" %></br>
   <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address) %>
  </p>

   <p><%= f.radio_button :select_address, 2 %>
   <%= f.label :address, "新しいお届け先" %></p>
    <%= f.label :postal_code, "郵便番号（ハイフンなし）" %> <%= f.text_field :postal_code, autofocus: true %><br />
    <%= f.label :address, "住所" %><%= f.text_field :address, autofocus: true %></br>
    <%= f.label :last_name, "宛名" %><%= f.text_field :name, autofocus: true %><br />

 <%= f.submit "確認画面へ進む" %>

<% end %>


