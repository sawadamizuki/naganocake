<div class="container">
注文履歴詳細画面

 <div class="row">
   <div class="col-md-6">
     <h5>注文情報</h5>
     <p>注文日 <%= @order.created_at %></p>
     <p>配送先 <%= @order.address %></p>
     <p>支払方法 <%= @order.payment_method_i18n %></p>
   </div>

   <div class="col-md-6">
     <h5>請求情報</h5>
     <p>商品合計　<%= @order.total_payment - @order.shipping_cost %></p>
     <p>配送料　<%= @order.shipping_cost %></p>
     <p>ご請求額　<%= @order.total_payment %></p>
 </div>

 <div class="row">
   <h4>注文内容</h4>
   <table class="table table-honer">
    <thead>
        <tr>
          <th>商品</th>
          <th>単価</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
    </thead>
    <tbody>
      <% @order_details.each do |order_detail| %>
        <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.with_tax_price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal %></td>
        </tr>
      <% end %>
    </tbody>
   </table>
 </div>
</div>
