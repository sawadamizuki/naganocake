配送先登録・一覧

<%= form_with model: @address, url:'/addresses', local:true do |f| %>
  <p>郵便番号
   <%= f.text_field :postal_code %></p>
  <p>住所
   <%= f.text_field :address %></p>
  <p>宛名
   <%= f.text_field :name %></p>
  <p><%= f.submit '新規登録' %></p>
<% end %>


<p>郵便番号・住所・宛名一覧表</p>

<table class="table table-honer">
    <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
    </thead>
    <tbody>
     <% @addresses.each do |address| %>
        <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><%= link_to "編集", edit_address_path(address) %> | <%= link_to "削除", address_path(address), method: :delete %></td>
        </tr>
     <% end %>
    </tbody>
  </table>