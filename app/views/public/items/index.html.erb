<div class="container">
 商品一覧

<div class="row justify-content-center">
　<% @item.each do |item| %>
　 <div class="one-post">
　    <p>
　       <%= link_to item_path(item.id) do %>
           <%= attachment_image_tag item, :image, :fill, 150, 150, format: 'jpeg' %>
　　     <% end %></br><%= item.name %></br><%= item.price %>円</p>
   </div>
　<% end %>
</div>
</div>

