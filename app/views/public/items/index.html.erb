商品一覧

<div class="row justify-content-center">
　<% @item.each do |item| %>
　 <div class="one-post">
　    <p>
　       <%= link_to item_path(item.id) do %>
           <%= attachment_image_tag item, :image, :fill, 150, 150, format: 'jpeg' %>
　　     <% end %>
　    </p>
　    <p><%= item.name %></p>
　    <p><%= item.price %></p>
   </div>
　<% end %>
</div>

