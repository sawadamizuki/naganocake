<div class="container">
 <h3>商品詳細</h3>
 <div class="row">
   <div class="order("created_at DESC")">
     <%= attachment_image_tag @item, :image, :fill, 250, 250, format: 'jpeg' %>
   </div>
   <div class="col-md-8">
     <p>商品名 <%= @item.name %></p>
     <p>商品説明 <%= @item.introduction %></p>
     <p>税込価格（税抜価格）<%= @item.price %>円</p>
     <p class="text-left"><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-warning" %></p>
   </div>
 </div>
</div>