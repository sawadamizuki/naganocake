
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <p class="text-left"><h3>商品一覧</h3></p>
    </div>
    <div class="col-md-6">
      <p class="text-right"><%= link_to "新規登録", new_admin_item_path, class: "btn btn-warning" %></p>
    </div>
  </div>

  <table class="table table-honer">
    <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
        </tr>
    </thead>
    <tbody>
     <% @item.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id) do %>
             <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price %></td>
          <td></td>
          <td></td>
        </tr>
     <% end %>
    </tbody>
  </table>
</div>

