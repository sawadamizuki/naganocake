<div class="container">

 <p>注文履歴一覧</p>

 <table class="table">
    <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
        </tr>
    </thead>
    <tbody>
    <% @order.each do |order| %>
        <tr>
            <td><%= link_to admin_order_path(order) do %>
                   <%= order.created_at %>
                <% end %>
            </td>
            <td><%= order.customer.last_name %> <%= order.customer.first_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
        </tr>
    <% end %>
    <%= paginate @order %>
    </tbody>
</table>
</div>