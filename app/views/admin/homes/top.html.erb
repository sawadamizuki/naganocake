

 <p>注文履歴一覧</p>

 <table class="order-history">
    <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
        </tr>
    </thead>
    <tbody>
    <% @order.each do |order| %>
        <tr>
            <td><%= order.created_at %></td>
            <td><%= order.customer.last_name %> <%= order.customer.first_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
        </tr>
    <% end %>
    </tbody>
</table>