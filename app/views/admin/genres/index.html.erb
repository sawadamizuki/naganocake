


<p>ジャンル一覧・追加</p>

<%= form_with model: @genre, url:'/admin/genres', local:true do |f| %>

 <div class="row">
   <div class="col-md-2">
     <p>ジャンル名</p>
   </div>
   <div class="col-md-4">
     <%= f.text_field :name %>
   </div>
   <div class="col-md-2">
     <%= f.submit '新規登録' %>
   </div>

 </div>
<% end %>





  <table class="table table-honer">
    <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
    </thead>
    <tbody>

     <% @genres.each do |genre| %>
        <tr>
            <td><%= genre.name %></td>
            <td>
             <%= link_to "編集する", edit_admin_genre_path(genre) %>
            </td>
        </tr>
     <% end %>

    </tbody>
  </table>





