<h2>Sign up</h2>


<%= form_with model: @public, url: public_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <p>名前</p>
  <p>（姓）</p>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true %>
  </div>
  <p>（名）</p>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <p>フリガナ</p>
  <p>（セイ）</p>
  <div class="field">
    <%= f.label :last_name_kana %><br />
    <%= f.text_field :last_name_kana, autofocus: true %>
  </div>
  <p>（メイ）</p>
  <div class="field">
    <%= f.label :first_name_kana %><br />
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>


  <p>メールアドレス</p>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <p>郵便番号（ハイフンなし）</p>
  <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

   <p>住所</p>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>

   <p>電話番号（ハイフンなし）</p>
  <div class="field">
    <%= f.label :telephone_number %><br />
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>


  <p>パスワード（６文字以上）</p>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

　<p>パスワード（確認用）</p>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
